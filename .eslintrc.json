{
    "globals": {
      "$": true,
      "jQuery": true
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "semi": ["error", "always"],
        "no-extra-semi": "error",
        "space-before-function-paren": ["error", "never"],
        "no-multi-spaces": ["error", { "ignoreEOLComments": true, "exceptions": { "Property": true } }]
    }
}
